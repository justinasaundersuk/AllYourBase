<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/styles")
</head>

<body>

    <header>
        <div class="container-fluid filter-nav">
            <div class="row-flex">
                <div class="col-xs-12 col-sm-4 logo">
                    <a href="/"><img src="~/Content/images/logo-damdigital.png" /></a>
                </div>
                <div class="col-xs-12 col-sm-8 filter-options">
                    <nav>
                        <a href="#" class="filter-button reset active">Home</a>
                        <a href="#" class="filter-button" data-filter=".what">What</a>
                        <a href="#" class="filter-button" data-filter=".who">Who</a>
                        <a href="#" class="filter-button" data-filter=".look">Look</a>
                        <a href="#" class="filter-button" data-filter=".contact">Contact</a>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div class="page-wrapper">

        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <footer class="site-footer">
        <ul class="dam-info">
            <li>Dam Digital, 20 Irving Street, London. WC2H 7AU</li>
            <li><a href="mailto:info@dam-digital.com">info@dam-digital.com</a></li>
            <li>@@dam-digital</li>
            <li>Privacy policy</li>
            <li>Cookie policy</li>
            <li>Legal wotsits</li>
        </ul>
        <ul class="dam-social">
            <li>FB</li>
            <li>TW</li>
            <li>IG</li>
        </ul>
    </footer>

    <script src="~/Scripts/isotope.pkgd.min.js"></script>
    <script src="~/Scripts/jquery.matchHeight-min.js" type="text/javascript"></script>
    <script src="~/Scripts/custom.js" type="text/javascript"></script>

</body>
</html>
