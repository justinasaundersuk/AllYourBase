<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/styles")

    <link rel="stylesheet" href="~/Content/css/vendors/owl.carousel.css" />
    <link rel="stylesheet" href="~/Content/css/vendors/animate.css" />
</head>

<body>

    <div class="page-wrapper">

        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <footer class="site-footer">
        <ul class="dam-info">
            <li>Dam Digital, 20 Irving Street, London. WC2H 7AU</li>
            <li><a href="mailto:info@dam-digital.com">info@dam-digital.com</a></li>
            <li><a href="https://twitter.com/damdigital" title="damdigital Twitter">@@dam-digital</a></li>
            <li><a href="#" title="Privacy policy">Privacy policy</a></li>
            <li><a href="#" title="Cookie policy">Cookie policy</a></li>
            <li><a href="#" title="Legal information">Legal</a></li>
        </ul>
        <ul class="dam-social">
            <li>FB</li>
            <li>TW</li>
            <li>IG</li>
        </ul>
    </footer>

    <script src="~/Scripts/isotope.pkgd.min.js"></script>
    <script src="~/Scripts/jquery.matchHeight-min.js" type="text/javascript"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/custom.js" type="text/javascript"></script>

</body>
</html>
